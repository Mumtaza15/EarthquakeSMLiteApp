<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SensorActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/x_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"
        android:text="X Value"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/y_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/x_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:text="Y Value"
        android:textSize="24dp"
        android:textAlignment="center"/>

    <TextView
        android:id="@+id/z_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/y_value"
        android:layout_centerHorizontal="true"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:text="Z Value"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/cek_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/z_value"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:text="Shake Check"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="42dp"
        android:layout_marginLeft="48dp"
        android:layout_centerHorizontal="true"
        android:text="Anda dapat mengaktifkan peringatan Gempa Bumi melalui tombol berikut:(Lokasi)"
        android:layout_below="@+id/cek_shake"/>

    <Button
        android:id="@+id/btn_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:text="Peringatan Gempa Bumi"/>


</RelativeLayout>